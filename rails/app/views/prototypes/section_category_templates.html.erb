<%= render layout: 'prototypes/layouts/default' do %>
  <div class="container mx-auto p-6 space-y-12">
    <!-- SECTION 1: Section Category Templates Index -->
    <section>
      <div class="flex justify-between items-center mb-6">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Section Category Templates</h1>
          <p class="text-sm text-gray-500">Manage your high-level category groupings</p>
        </div>
        <button class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg text-sm transition-colors shadow-sm">
          <i class="fas fa-plus text-xs"></i> New Section Category Template
        </button>
      </div>

      <div class="overflow-hidden bg-white rounded-lg shadow ring-1 ring-black ring-opacity-5">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Created At</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6 text-right text-sm font-semibold text-gray-900">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">Concrete Mixes</td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Standard concrete proportions for various strengths</td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Oct 24, 2023</td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 space-x-3">
                <button class="text-blue-600 hover:text-blue-900">Show</button>
                <button class="text-amber-600 hover:text-amber-900">Edit</button>
                <button class="text-red-600 hover:text-red-900">Destroy</button>
              </td>
            </tr>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">Steel Reinforcement</td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Standard rebar weights and sizes</td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Oct 25, 2023</td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 space-x-3">
                <button class="text-blue-600 hover:text-blue-900">Show</button>
                <button class="text-amber-600 hover:text-amber-900">Edit</button>
                <button class="text-red-600 hover:text-red-900">Destroy</button>
              </td>
            </tr>
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">Earthworks</td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Excavation and backfill material templates</td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">Oct 26, 2023</td>
              <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 space-x-3">
                <button class="text-blue-600 hover:text-blue-900 border-b border-blue-600">Show</button>
                <button class="text-amber-600 hover:text-amber-900">Edit</button>
                <button class="text-red-600 hover:text-red-900">Destroy</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <div class="border-t border-gray-200"></div>

    <!-- SECTION 2: Material Supply Templates -->
    <section>
      <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden">
        <div class="p-6">
          <div class="flex justify-between items-center mb-6">
            <div>
              <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                <i class="fas fa-folder-open text-blue-600"></i>
                Template Details: Concrete Mixes
              </h2>
              <p class="text-sm text-gray-500 mt-1">Managing material supply templates for this category</p>
            </div>
            <span class="inline-flex items-center rounded-full bg-gray-50 px-2.5 py-0.5 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">3 items</span>
          </div>

          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200" id="material-supply-table">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="py-3 px-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 w-1/3">Material Name</th>
                  <th scope="col" class="py-3 px-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Proportion %</th>
                  <th scope="col" class="py-3 px-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Waste %</th>
                  <th scope="col" class="py-3 px-4 text-center text-xs font-semibold uppercase tracking-wider text-gray-500">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200" id="material-rows">
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="p-3">
                    <input type="text" value="Cement Type GP" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="15" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="5" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3 text-center">
                    <button class="text-red-500 hover:text-red-700 p-2 rounded-md hover:bg-red-50 transition-colors" onclick="this.closest('tr').remove()">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="p-3">
                    <input type="text" value="Fine Sand" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="40" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="10" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3 text-center">
                    <button class="text-red-500 hover:text-red-700 p-2 rounded-md hover:bg-red-50 transition-colors" onclick="this.closest('tr').remove()">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="p-3">
                    <input type="text" value="10mm Aggregate" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="45" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="8" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3 text-center">
                    <button class="text-red-500 hover:text-red-700 p-2 rounded-md hover:bg-red-50 transition-colors" onclick="this.closest('tr').remove()">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="p-3">
                    <input type="text" value="Admixture" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="0.5" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3">
                    <input type="number" value="2" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
                  </td>
                  <td class="p-3 text-center">
                    <button class="text-red-500 hover:text-red-700 p-2 rounded-md hover:bg-red-50 transition-colors" onclick="this.closest('tr').remove()">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-100">
            <button class="inline-flex items-center gap-2 border border-gray-300 bg-white hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-lg text-sm transition-colors shadow-sm" onclick="addNewRow()">
              <i class="fas fa-plus text-xs"></i> Add Entry
            </button>
            <button class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg text-sm transition-colors shadow-sm">
              <i class="fas fa-save text-xs"></i> Update Prototype
            </button>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    function addNewRow() {
      const tbody = document.getElementById('material-rows');
      const newRow = document.createElement('tr');
      newRow.className = 'hover:bg-gray-50 transition-colors animate-in fade-in slide-in-from-left-2 duration-300';
      newRow.innerHTML = `
        <td class="p-3">
          <input type="text" placeholder="New Material..." class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
        </td>
        <td class="p-3">
          <input type="number" placeholder="0" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
        </td>
        <td class="p-3">
          <input type="number" placeholder="0" class="block w-full max-w-[100px] rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-1.5" />
        </td>
        <td class="p-3 text-center">
          <button class="text-red-500 hover:text-red-700 p-2 rounded-md hover:bg-red-50 transition-colors" onclick="this.closest('tr').remove()">
            <i class="fas fa-trash"></i>
          </button>
        </td>
      `;
      tbody.appendChild(newRow);
    }
  </script>
<% end %>
