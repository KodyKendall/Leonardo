            <label class="block text-sm font-medium text-gray-700 mb-1">Units Required</label>
            <input type="number" id="unitsInput" min="1" value="1" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500" required>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Period (Months)</label>
            <input type="number" id="monthsInput" min="1" value="1" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500" required>
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Purpose</label>
          <input type="text" id="purposeInput" placeholder="e.g., Main erection, Crane beams" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Monthly Cost Override (optional)</label>
          <div class="flex items-center gap-2">
            <span class="text-gray-500">R</span>
            <input type="number" id="costOverrideInput" placeholder="Leave blank for default" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
          </div>
          <p class="text-xs text-gray-500 mt-1">Use this to override the master rate for negotiated pricing</p>
        </div>
        <div class="flex gap-3 pt-4">
          <button type="button" id="cancelModalBtn" class="flex-1 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
            Cancel
          </button>
          <button type="submit" class="flex-1 px-4 py-2 text-sm font-medium text-white bg-purple-600 rounded-lg hover:bg-purple-700 transition">
            Add Equipment
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- JavaScript -->
  <script>
    // Toggle annotations visibility
    document.getElementById('toggleAnnotations').addEventListener('change', function() {
      const annotations = document.querySelectorAll('.db-annotation');
      annotations.forEach(el => {
        el.style.display = this.checked ? '' : 'none';
      });
    });

    // Modal functionality
    const modal = document.getElementById('addEquipmentModal');
    const addBtn = document.getElementById('addEquipmentBtn');
    const closeBtn = document.getElementById('closeModalBtn');
    const cancelBtn = document.getElementById('cancelModalBtn');
    const form = document.getElementById('addEquipmentForm');
    const tableBody = document.getElementById('equipmentTableBody');

    function openModal() {
      modal.classList.remove('hidden');
    }

    function closeModal() {
      modal.classList.add('hidden');
      form.reset();
    }

    addBtn.addEventListener('click', openModal);
    closeBtn.addEventListener('click', closeModal);
    cancelBtn.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });

    // Form submission
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const select = document.getElementById('equipmentSelect');
      const selectedOption = select.options[select.selectedIndex];
      const units = parseInt(document.getElementById('unitsInput').value);
      const months = parseInt(document.getElementById('monthsInput').value);
      const purpose = document.getElementById('purposeInput').value || 'General use';
      const costOverride = document.getElementById('costOverrideInput').value;

      const model = selectedOption.value;
      const category = selectedOption.dataset.category;
      const height = selectedOption.dataset.height;
      const monthlyCost = costOverride || selectedOption.dataset.cost;
      const totalCost = parseInt(monthlyCost) * units * months;

      const categoryColors = {
        'Diesel Boom': 'bg-orange-100 text-orange-800',
        'Electric Scissors': 'bg-blue-100 text-blue-800',
        'Telehandler': 'bg-green-100 text-green-800'
      };

      const newRow = document.createElement('tr');
      newRow.className = 'hover:bg-purple-50 transition-colors equipment-row';
      newRow.innerHTML = `
        <td class="px-4 py-4 whitespace-nowrap">
          <div class="flex items-center gap-2">
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium ${categoryColors[category]}">${category}</span>
            <span class="font-medium text-gray-900">${model}</span>
          </div>
          <p class="text-xs text-gray-500 mt-0.5">${height}m working height</p>
        </td>
        <td class="px-4 py-4 whitespace-nowrap text-center">
          <input type="number" value="${units}" min="1" class="w-16 text-center border border-gray-300 rounded-md px-2 py-1.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
        </td>
        <td class="px-4 py-4 whitespace-nowrap text-center">
          <input type="number" value="${months}" min="1" class="w-16 text-center border border-gray-300 rounded-md px-2 py-1.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
        </td>
        <td class="px-4 py-4 whitespace-nowrap">
          <input type="text" value="${purpose}" class="w-full border border-gray-300 rounded-md px-3 py-1.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500 text-sm">
        </td>
        <td class="px-4 py-4 whitespace-nowrap text-right">
          <div class="flex items-center justify-end gap-1">
            <span class="text-gray-500">R</span>
            <input type="number" value="${monthlyCost}" class="w-24 text-right border border-gray-300 rounded-md px-2 py-1.5 focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
          </div>
        </td>
        <td class="px-4 py-4 whitespace-nowrap text-right">
          <span class="font-semibold text-purple-600">R${totalCost.toLocaleString()}</span>
        </td>
        <td class="px-4 py-4 whitespace-nowrap text-center">
          <button class="text-red-600 hover:text-red-800 transition p-1 delete-row-btn" title="Remove">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </td>
      `;

      tableBody.appendChild(newRow);
      attachDeleteHandler(newRow.querySelector('.delete-row-btn'));
      closeModal();
    });

    // Delete row functionality
    function attachDeleteHandler(btn) {
      btn.addEventListener('click', function() {
        if (confirm('Are you sure you want to remove this equipment?')) {
          this.closest('tr').remove();
        }
      });
    }

    // Attach to existing delete buttons
    document.querySelectorAll('.equipment-row button').forEach(attachDeleteHandler);
  </script>

</div>
<% end %>
