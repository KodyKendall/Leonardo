<div class="container mx-auto px-4 py-8"
     data-requirements-path="<%= @current_path %>"
     data-requirements-is-file="<%= @is_file %>"
     data-requirements-file="<%= @is_file ? "rails/requirements/#{@current_path}" : '' %>"
     id="requirements-container">
  <!-- Breadcrumbs -->
  <div class="breadcrumbs mb-6">
    <ul class="flex gap-2 text-sm">
      <% @breadcrumbs.each_with_index do |crumb, index| %>
        <li>
          <% if index > 0 %>
            <span class="mx-2">/</span>
          <% end %>
          <% if crumb[:path].empty? %>
            <%= link_to crumb[:name], requirements_path, class: "link link-hover text-primary font-semibold" %>
          <% else %>
            <%= link_to crumb[:name], "/requirements/#{crumb[:path]}", class: "link link-hover text-primary" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if @is_file %>
    <!-- FILE VIEW -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-4"><%= @file_name %></h1>
      <div class="bg-base-200 p-6 rounded-lg overflow-auto max-h-screen prose prose-sm max-w-none" id="markdown-content">
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked-gfm-heading-id/+esm"></script>
    <style>
      #markdown-content {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      
      #markdown-content h1 {
        font-size: 2rem;
        font-weight: 700;
        margin: 1.5rem 0 1rem;
        border-bottom: 3px solid #2563eb;
        padding-bottom: 0.5rem;
      }
      
      #markdown-content h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 1.25rem 0 0.75rem;
        border-bottom: 2px solid #3b82f6;
        padding-bottom: 0.3rem;
      }
      
      #markdown-content h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 1rem 0 0.5rem;
        color: #1f2937;
      }
      
      #markdown-content h4, #markdown-content h5, #markdown-content h6 {
        font-weight: 600;
        margin: 0.75rem 0 0.5rem;
        color: #374151;
      }
      
      #markdown-content p {
        margin: 0.75rem 0;
      }
      
      #markdown-content strong {
        font-weight: 700;
        color: #1f2937;
      }
      
      #markdown-content em {
        font-style: italic;
        color: #4b5563;
      }
      
      #markdown-content a {
        color: #2563eb;
        text-decoration: underline;
        cursor: pointer;
      }
      
      #markdown-content a:hover {
        color: #1d4ed8;
      }
      
      #markdown-content ul, #markdown-content ol {
        margin: 1rem 0;
        padding-left: 2rem;
      }
      
      #markdown-content li {
        margin: 0.5rem 0;
      }
      
      #markdown-content code {
        background-color: #f3f4f6;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-family: 'Monaco', 'Courier New', monospace;
        font-size: 0.9rem;
        color: #d946ef;
      }
      
      #markdown-content pre {
        background-color: #1f2937;
        color: #e5e7eb;
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1rem 0;
        font-family: 'Monaco', 'Courier New', monospace;
        font-size: 0.9rem;
        line-height: 1.4;
      }
      
      #markdown-content pre code {
        background-color: transparent;
        padding: 0;
        color: inherit;
      }
      
      #markdown-content table {
        border-collapse: collapse;
        width: 100%;
        margin: 1.5rem 0;
        border: 1px solid #d1d5db;
        border-radius: 0.5rem;
        overflow: hidden;
      }
      
      #markdown-content th {
        background-color: #3b82f6;
        color: white;
        padding: 0.75rem 1rem;
        text-align: left;
        font-weight: 600;
        border: 1px solid #2563eb;
      }
      
      #markdown-content td {
        padding: 0.75rem 1rem;
        border: 1px solid #e5e7eb;
      }
      
      #markdown-content tr:nth-child(even) {
        background-color: #f9fafb;
      }
      
      #markdown-content tr:hover {
        background-color: #f3f4f6;
      }
      
      #markdown-content blockquote {
        border-left: 4px solid #3b82f6;
        padding: 0.5rem 1rem;
        margin: 1rem 0;
        background-color: #eff6ff;
        color: #1e40af;
      }
      
      #markdown-content hr {
        border: none;
        height: 2px;
        background-color: #d1d5db;
        margin: 2rem 0;
      }
    </style>
    
    <script>
      // Configure marked for better rendering
      marked.setOptions({
        breaks: true,
        gfm: true,
        mangle: false
      });
      
      document.getElementById('markdown-content').innerHTML = marked.parse(`<%= escape_javascript(@content) %>`);
    </script>
  <% else %>
    <!-- DIRECTORY VIEW -->
    <h1 class="text-3xl font-bold mb-6">Requirements Browser</h1>

    <% if @items.empty? %>
      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>This folder is empty.</span>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @items.each do |item| %>
          <% if item[:is_dir] %>
            <%= link_to "/requirements/#{item[:path]}", class: "card bg-base-200 shadow hover:shadow-lg transition cursor-pointer" do %>
              <div class="card-body">
                <h3 class="card-title text-lg">üìÅ <%= item[:name] %></h3>
                <p class="text-sm text-gray-600">Folder</p>
              </div>
            <% end %>
          <% else %>
            <%= link_to "/requirements/#{item[:path]}", class: "card bg-base-100 shadow hover:shadow-lg transition cursor-pointer" do %>
              <div class="card-body">
                <h3 class="card-title text-lg">üìÑ <%= item[:name] %></h3>
                <p class="text-sm text-gray-600">File</p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
