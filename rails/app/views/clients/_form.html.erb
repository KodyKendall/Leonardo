<%= form_with(model: client, class: "contents") do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul class="list-disc ml-6">
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :business_name %>
    <%= form.text_field :business_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": client.errors[:business_name].none?, "border-red-400 focus:outline-red-600": client.errors[:business_name].any?}] %>
  </div>

  <div class="my-5" data-controller="nested-form">
    <h3 class="text-lg font-semibold mb-4">Contacts</h3>
    
    <div data-nested-form-target="container">
      <%= form.fields_for :contacts do |contact_form| %>
        <%= render "contact_fields", f: contact_form %>
      <% end %>
    </div>

    <template data-nested-form-target="template">
      <%= form.fields_for :contacts, Contact.new, child_index: "NEW_RECORD" do |contact_form| %>
        <%= render "contact_fields", f: contact_form %>
      <% end %>
    </template>

    <div class="mt-4">
      <button type="button" data-action="nested-form#add" class="btn btn-outline btn-sm">
        <i class="fas fa-plus mr-2"></i> Add Contact
      </button>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
