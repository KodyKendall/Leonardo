<% content_for :title, "New P&G Item" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New P&G Item</h1>
  <p class="text-gray-600 mt-2">Tender: <%= @tender.tender_name %></p>

  <div class="mt-8">
    <%= render "form", preliminaries_general_item: @preliminaries_general_item %>
  </div>

  <div class="mt-6">
    <%= link_to tender_preliminaries_general_items_path(@tender), class: "inline-flex items-center text-gray-600 hover:text-gray-900 font-medium" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i> Back to P&Gs
    <% end %>
  </div>
</div>
