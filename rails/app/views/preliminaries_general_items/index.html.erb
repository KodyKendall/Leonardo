<% content_for :title, "P&G Items - #{@tender.tender_name}" %>

<div class="w-full" 
     data-tender-id="<%= @tender.id %>"
     data-total-tonnage="<%= @tender.total_tonnage %>"
     data-crane-rate="<%= @tender.on_site_mobile_crane_breakdown&.crainage_rate_per_tonne || 0 %>"
     data-access-rate="<%= @tender.tender_equipment_summary&.cherry_picker_rate_per_tonne || 0 %>">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-10">
    <div>
      <h1 class="font-bold text-4xl">Preliminaries & General</h1>
      <p class="text-gray-600 mt-2">
        Tender: <%= link_to @tender.tender_name, tender_path(@tender), class: "text-blue-600 hover:underline" %> (<%= @tender.e_number %>) |
        <%= link_to "Template Catalogue", preliminaries_general_item_templates_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
    <%= button_to tender_preliminaries_general_items_path(@tender), 
                   method: :post, 
                   params: { preliminaries_general_item: { description: "New P&G Item", category: "fixed_based", quantity: 1, rate: 0 } },
                   data: { turbo_stream: true },
                   class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium flex items-center gap-2" do %>
      <i class="fa-solid fa-plus"></i> Quick Add P&G Item
    <% end %>
  </div>

  <div id="preliminaries_general_items_container" class="space-y-10">
    <% @grouped_items.each do |category, items| %>
      <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
        <div class="bg-gray-50 px-6 py-3 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-800 capitalize">
            <%= category.to_s.humanize %> Items
          </h2>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Template</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-40">Category</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-20"><i class="fa-solid fa-truck-pickup" title="Crane"></i> Crane</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-20"><i class="fa-solid fa-stairs" title="Access Equipment"></i> Access</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-32">Quantity</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-32">Rate</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-32">Total</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider w-24">Actions</th>
              </tr>
            </thead>
            <tbody id="pg_items_table_body_<%= category %>" class="bg-white divide-y divide-gray-200">
              <%= render partial: "preliminaries_general_item", collection: items, as: :preliminaries_general_item, locals: { tender: @tender } %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>

    <%= render "totals", tender: @tender %>
  </div>

  <div class="mt-10">
    <%= link_to tender_path(@tender), class: "inline-flex items-center text-gray-600 hover:text-gray-900 font-medium" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i> Back to Tender
    <% end %>
  </div>
</div>
