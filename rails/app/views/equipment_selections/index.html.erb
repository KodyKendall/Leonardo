<% content_for :title, "Equipment Selections for #{@tender.tender_name}" %>

<div class="w-full">
  <!-- Turbo Stream Subscription -->
  <%= turbo_stream_from @tender %>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Equipment Cost Summary (BEFORE heading) -->
  <%= render partial: 'tender_equipment_summaries/summary', locals: { tender_equipment_summary: @tender_equipment_summary } %>

  <!-- Tender Context Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 mb-2">
      <%= link_to "Tender", tender_path(@tender), class: "text-blue-600 hover:text-blue-800" %>
      <span class="text-gray-400">/</span>
      <span class="text-gray-700 font-semibold"><%= @tender.e_number %> - <%= @tender.tender_name %></span>
    </div>
    <h1 class="font-bold text-4xl">Equipment Selections</h1>
  </div>

  <!-- Equipment Selections Table -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Equipment</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Units</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Months</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Purpose</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Monthly Cost</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Total Cost</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Establishment</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">De-establishment</th>
          <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody id="equipment_selections_table" class="divide-y divide-gray-200">
        <% @equipment_selections.each do |equipment_selection| %>
          <%= render "equipment_selection", equipment_selection: equipment_selection %>
        <% end %>
      </tbody>

      <tbody id="equipment_totals_table" class="divide-y divide-gray-200">
        <!-- Establishment and De-establishment Cost Row -->
        <%= render "establishment_cost_row", tender_equipment_summary: @tender_equipment_summary %>

        <!-- Add Equipment Form Row -->
        <tr>
          <td colspan="9" class="p-0">
            <%= render "add_form", tender: @tender, new_equipment_selection: @new_equipment_selection, equipment_types: @equipment_types %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- No Equipment Message -->
  <%= turbo_frame_tag "equipment_empty_state" do %>
    <% if @equipment_selections.empty? %>
      <div class="mt-6 p-6 bg-gray-50 border border-gray-200 rounded-lg text-center">
        <p class="text-gray-500 text-sm mb-4">No equipment selections yet. Add one using the form below.</p>
      </div>
    <% end %>
  <% end %>

  <!-- Navigation Links -->
  <div class="mt-6 flex gap-4">
    <%= link_to "Back to Tender", tender_path(@tender), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    <%= link_to "View Equipment Types", equipment_types_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>
