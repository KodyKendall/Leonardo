<% content_for :title, "Equipment Selections for #{@tender.tender_name}" %>

<div class="w-full">
  <!-- Turbo Stream Subscription -->
  <%= turbo_stream_from @tender %>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Equipment Cost Summary (BEFORE heading) -->
  <%= render partial: 'tender_equipment_summaries/summary', locals: { tender_equipment_summary: @tender_equipment_summary } %>

  <!-- Tender Context Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 mb-2">
      <%= link_to "Tender", tender_path(@tender), class: "text-blue-600 hover:text-blue-800" %>
      <span class="text-gray-400">/</span>
      <span class="text-gray-700 font-semibold"><%= @tender.e_number %> - <%= @tender.tender_name %></span>
    </div>
    <h1 class="font-bold text-4xl">Equipment Selections</h1>
  </div>

  <!-- Equipment Selections Table -->
  <div class="bg-white rounded-lg border border-gray-200 overflow-x-auto">
    <div class="table w-full min-w-[1200px]">
      <div class="table-header-group bg-gray-50 border-b border-gray-200">
        <div class="table-row">
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700">Equipment</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700 w-20">Units</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700 w-20">Months</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700">Purpose</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700 w-28">Base Rate</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700 w-20">DW %</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700 w-28">Diesel</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700">Monthly</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700">Total Cost</div>
          <div class="table-cell px-4 py-3 text-left text-sm font-semibold text-gray-700">Actions</div>
        </div>
      </div>
      <div id="equipment_selections_table" class="table-row-group divide-y divide-gray-200">
        <% @equipment_selections.each do |equipment_selection| %>
          <%= render "equipment_selection", equipment_selection: equipment_selection %>
        <% end %>
      </div>

      <div id="equipment_totals_table" class="table-row-group divide-y divide-gray-200">
        <!-- Establishment and De-establishment Cost Row -->
        <%= render "establishment_cost_row", tender_equipment_summary: @tender_equipment_summary %>
      </div>
    </div>

    <!-- Add Equipment Form Row -->
    <div id="add_equipment_form_row" class="border-t-2 border-blue-200">
      <%= render "add_form", tender: @tender, new_equipment_selection: @new_equipment_selection, equipment_types: @equipment_types %>
    </div>
  </div>

  <!-- No Equipment Message -->
  <%= turbo_frame_tag "equipment_empty_state" do %>
    <% if @equipment_selections.empty? %>
      <div class="mt-6 p-6 bg-gray-50 border border-gray-200 rounded-lg text-center">
        <p class="text-gray-500 text-sm mb-4">No equipment selections yet. Add one using the form below.</p>
      </div>
    <% end %>
  <% end %>

  <!-- Navigation Links -->
  <div class="mt-6 flex gap-4">
    <%= link_to "Back to Tender", tender_path(@tender), class: "text-blue-600 hover:text-blue-800 font-medium" %>
    <%= link_to "View Equipment Types", equipment_types_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>
