<div class="material-row border border-gray-200 rounded p-3 flex gap-2 items-end" data-nested-form-wrapper>
  <%= form.hidden_field :id %>
  <%= form.hidden_field :_destroy, value: "0", 
                        data: { nested_form_target: "destroy" } %>
  
  <!-- Material Supply Select -->
  <div class="form-control flex-1">
    <%= form.collection_select :material_supply_id,
                               MaterialSupply.order(:name),
                               :id, :name,
                               { include_blank: "Select material..." },
                               { class: "select select-bordered select-sm" } %>
  </div>

  <!-- Proportion Input -->
  <div class="form-control w-32">
    <%= form.number_field :proportion,
                          step: 0.0001,
                          placeholder: "0.0000",
                          class: "input input-bordered input-sm" %>
  </div>

  <!-- Remove Button -->
  <button type="button"
          class="btn btn-sm btn-error btn-outline"
          data-action="nested-form#remove"
          title="Remove this material">
    <i class="fas fa-trash"></i>
  </button>
</div>
