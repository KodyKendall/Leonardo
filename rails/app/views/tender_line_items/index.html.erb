<% content_for :title, "Line Items - #{@tender.name}" %>

<div class="container mx-auto p-6">
  <% if notice.present? %>
    <div class="alert alert-success mb-6">
      <i class="fas fa-check-circle"></i>
      <span><%= notice %></span>
    </div>
  <% end %>

  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Tender Line Items</h1>
      <p class="text-gray-500">Tender: <%= @tender.name %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to builder_tender_path(@tender), class: "btn btn-primary" do %>
        <i class="fas fa-hammer"></i> Builder
      <% end %>
      <%= link_to tender_path(@tender), class: "btn btn-ghost" do %>
        <i class="fas fa-file-alt"></i> View Tender
      <% end %>
    </div>
  </div>

  <!-- Line Items Table -->
  <div class="card bg-base-100 shadow">
    <div class="card-body">
      <% if @tender_line_items.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra w-full">
            <thead>
              <tr>
                <th>Item #</th>
                <th>Description</th>
                <th>Category</th>
                <th class="text-right">Qty</th>
                <th>Unit</th>
                <th class="text-right">Rate</th>
                <th class="text-right">Total</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tender_line_items.each do |line_item| %>
                <tr class="hover">
                  <td>
                    <span class="badge badge-outline"><%= line_item.item_number || "—" %></span>
                  </td>
                  <td>
                    <%= link_to tender_tender_line_item_path(@tender, line_item), class: "link link-primary font-medium" do %>
                      <%= truncate(line_item.item_description, length: 50) %>
                    <% end %>
                  </td>
                  <td>
                    <% if line_item.section_category.present? %>
                      <span class="badge badge-sm"><%= line_item.section_category %></span>
                    <% else %>
                      <span class="text-gray-400">—</span>
                    <% end %>
                  </td>
                  <td class="text-right font-mono"><%= number_with_precision(line_item.quantity, precision: 2) %></td>
                  <td><%= line_item.unit_of_measure || "—" %></td>
                  <td class="text-right font-mono">R<%= number_with_precision(line_item.rate, precision: 2) %></td>
                  <td class="text-right font-mono font-bold">R<%= number_with_precision(line_item.total_amount, precision: 2) %></td>
                  <td class="text-center">
                    <%= link_to tender_tender_line_item_path(@tender, line_item), class: "btn btn-xs btn-ghost", title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_tender_tender_line_item_path(@tender, line_item), class: "btn btn-xs btn-ghost", title: "Edit" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr class="font-bold">
                <td colspan="6" class="text-right">Grand Total:</td>
                <td class="text-right font-mono text-lg">R<%= number_with_precision(@tender_line_items.sum(&:total_amount), precision: 2) %></td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <div class="text-center py-10 text-gray-500">
          <i class="fas fa-inbox text-4xl mb-4"></i>
          <p>No line items found for this tender.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Debug Info -->
  <div class="card bg-base-200 shadow-sm mt-6">
    <div class="card-body">
      <h3 class="card-title text-sm text-gray-500">Debug Info</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
        <div>
          <span class="text-gray-500">Tender ID:</span>
          <span class="font-mono font-bold"><%= @tender.id %></span>
        </div>
        <div>
          <span class="text-gray-500">Line Items:</span>
          <span class="font-mono font-bold"><%= @tender_line_items.count %></span>
        </div>
      </div>
    </div>
  </div>
</div>
