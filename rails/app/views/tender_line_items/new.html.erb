<% content_for :title, "Add Line Item to #{@tender.tender_name}" %>

<div class="w-full max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="font-bold text-4xl mb-2">Add Line Item</h1>
    <p class="text-gray-600">
      <strong>Tender:</strong> <%= @tender.tender_name %> 
      <span class="text-gray-400">(<%= @tender.e_number %>)</span>
    </p>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <%= render "form", tender: @tender, tender_line_item: @tender_line_item %>
  </div>
</div>
