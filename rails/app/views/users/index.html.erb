<% content_for :title, "Users" %>

<div class="w-full">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="font-bold text-4xl text-slate-900 mb-2">Users</h1>
        <p class="text-slate-600">Manage system users and their access</p>
      </div>
      <%= link_to new_user_path, class: "btn btn-primary gap-2" do %>
        <i class="fas fa-plus"></i>Add New User
      <% end %>
    </div>

    <!-- Success Alert -->
    <% if notice.present? %>
      <div class="alert alert-success shadow-lg border-l-4 mb-6" id="notice">
        <div class="flex items-center gap-3">
          <i class="fas fa-check-circle text-lg"></i>
          <span><%= notice %></span>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Users Table -->
  <div class="card bg-white shadow-md border border-slate-200">
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr class="bg-slate-50 border-b-2 border-slate-200">
            <th class="text-slate-700 font-semibold">Email</th>
            <th class="text-slate-700 font-semibold">Role</th>
            <th class="text-slate-700 font-semibold">Admin</th>
            <th class="text-slate-700 font-semibold">Created</th>
            <th class="text-slate-700 font-semibold text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @users.any? %>
            <% @users.each do |user| %>
              <tr class="hover:bg-slate-50 transition">
                <td class="py-4">
                  <div class="flex items-center gap-3">
                    <div class="avatar <%= 'placeholder' unless user.profile_pic.attached? %>">
                      <div class="w-10 rounded-full <%= 'bg-blue-100' unless user.profile_pic.attached? %>">
                        <% if user.profile_pic.attached? %>
                          <%= image_tag user.profile_pic %>
                        <% else %>
                          <span class="text-blue-600 font-bold flex items-center justify-center h-full">
                            <%= user.email.first.upcase %>
                          </span>
                        <% end %>
                      </div>
                    </div>
                    <div>
                      <p class="font-medium text-slate-900"><%= user.email %></p>
                      <p class="text-xs text-slate-500">ID: <%= user.id %></p>
                    </div>
                  </div>
                </td>
                <td class="text-slate-600">
                  <span class="capitalize"><%= user.role || "—" %></span>
                </td>
                <td class="text-slate-600">
                  <% if user.admin? %>
                    <span class="badge badge-success gap-2">
                      <i class="fas fa-check"></i>Yes
                    </span>
                  <% else %>
                    <span class="badge badge-ghost">No</span>
                  <% end %>
                </td>
                <td class="text-slate-600">
                  <%= user.created_at.strftime("%b %d, %Y") %>
                </td>
                <td>
                  <div class="flex justify-center gap-2">
                    <%= link_to edit_user_path(user), class: "btn btn-sm btn-ghost gap-1", title: "Edit user" do %>
                      <i class="fas fa-edit"></i>Edit
                    <% end %>
                    <%= button_to user, method: :delete, class: "btn btn-sm btn-ghost text-error gap-1", data: { turbo_confirm: "Are you sure? This cannot be undone." }, title: "Delete user" do %>
                      <i class="fas fa-trash"></i>Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3" class="py-12 text-center">
                <div class="flex flex-col items-center gap-4">
                  <i class="fas fa-users text-4xl text-slate-300"></i>
                  <p class="text-slate-500 font-medium">No users found</p>
                  <p class="text-slate-400 text-sm">Get started by <%= link_to "adding your first user", new_user_path, class: "link link-primary font-semibold" %></p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Summary Stats -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="stat bg-white shadow-md border border-slate-200 rounded-lg">
      <div class="stat-figure text-primary">
        <i class="fas fa-users text-3xl"></i>
      </div>
      <div class="stat-title text-slate-600">Total Users</div>
      <div class="stat-value text-primary"><%= @users.count %></div>
    </div>
    <div class="stat bg-white shadow-md border border-slate-200 rounded-lg">
      <div class="stat-figure text-info">
        <i class="fas fa-user-plus text-3xl"></i>
      </div>
      <div class="stat-title text-slate-600">Latest User</div>
      <div class="stat-value text-info"><%= @users.max_by(&:created_at)&.created_at&.strftime("%b %d") || "—" %></div>
    </div>
  </div>
</div>
