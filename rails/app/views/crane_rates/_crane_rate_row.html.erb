<%= turbo_frame_tag dom_id(crane_rate) do %>
  <tr id="<%= dom_id crane_rate %>_display">
    <td><%= crane_rate.size %></td>
    <td><span class="badge badge-outline"><%= crane_rate.ownership_type %></span></td>
    <td><strong>₹<%= number_with_precision(crane_rate.wet_rate_per_day, precision: 0) %></strong></td>
    <td>₹<%= number_with_precision(crane_rate.dry_rate_per_day, precision: 0) %></td>
    <td>₹<%= number_with_precision(crane_rate.diesel_per_day, precision: 0) %></td>
    <td>
      <div class="flex gap-2">
        <%= link_to edit_crane_rate_path(crane_rate), class: "btn btn-xs btn-ghost", title: "Edit", data: { turbo_frame: dom_id(crane_rate) } do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
        <%= button_to crane_rate, method: :delete, class: "btn btn-xs btn-ghost text-error", data: { turbo_confirm: "Are you sure?" }, form: { local: true } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
