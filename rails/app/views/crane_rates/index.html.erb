<% content_for :title, "Crane rates" %>

<div class="w-full max-w-6xl">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Crane rates</h1>
    <%= link_to "Add Crane Rate", new_crane_rate_path, class: "btn btn-primary" %>
  </div>

  <% if @crane_rates.any? %>
    <div id="crane_rates_list" class="space-y-6">
      <%= render @crane_rates %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <span>No crane rates found. <%= link_to "Create one", new_crane_rate_path, class: "link" %></span>
    </div>
  <% end %>
</div>
