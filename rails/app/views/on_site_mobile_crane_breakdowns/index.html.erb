<% content_for :title, "On site mobile crane breakdowns" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">On site mobile crane breakdowns</h1>
    <%= link_to "New on site mobile crane breakdown", new_on_site_mobile_crane_breakdown_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="on_site_mobile_crane_breakdowns" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @on_site_mobile_crane_breakdowns.any? %>
      <% @on_site_mobile_crane_breakdowns.each do |on_site_mobile_crane_breakdown| %>
        <div class="w-full">
          <%= render on_site_mobile_crane_breakdown %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No on site mobile crane breakdowns found.</p>
    <% end %>
  </div>
</div>
