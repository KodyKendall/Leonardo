<% content_for :title, "Showing on site mobile crane breakdown" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing on site mobile crane breakdown</h1>

  <%= render @on_site_mobile_crane_breakdown %>

  <%= link_to "Edit this on site mobile crane breakdown", edit_on_site_mobile_crane_breakdown_path(@on_site_mobile_crane_breakdown), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to on site mobile crane breakdowns", on_site_mobile_crane_breakdowns_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this on site mobile crane breakdown", @on_site_mobile_crane_breakdown, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
