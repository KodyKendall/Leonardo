<%= turbo_frame_tag dom_id(tender, :tender_specific_material_rates) do %>
  <% if tender_specific_material_rates.any? %>
    <%= render partial: "tender_specific_material_rates/tender_specific_material_rate", 
               collection: tender_specific_material_rates, 
               as: :tender_specific_material_rate,
               locals: { monthly_rate_id: local_assigns[:monthly_rate_id] } %>
  <% else %>
    <div class="alert alert-info mb-4">
      <p>No material rate overrides set for this tender.</p>
    </div>
  <% end %>
<% end %>
