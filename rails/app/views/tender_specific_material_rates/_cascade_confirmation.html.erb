<%= turbo_frame_tag dom_id(tender_specific_material_rate) do %>
  <div class="material-rate-row">
    <div class="alert alert-warning">
      <div class="flex items-center gap-3 mb-4">
        <i class="fa-solid fa-triangle-exclamation text-lg"></i>
        <div>
          <h3 class="font-bold">Confirm Rate Update</h3>
          <p class="text-sm mt-2">
            Updating this material rate will affect <strong><%= affected_material_count %> line item(s)</strong> using this material.
          </p>
          <p class="text-sm mt-2 text-warning">
            <i class="fa-solid fa-info-circle"></i>
            This will recalculate all affected tender line item totals.
          </p>
        </div>
      </div>

      <div class="bg-white rounded p-3 mb-4 border-l-4 border-warning">
        <p class="text-sm">
          <strong>Material:</strong> <%= tender_specific_material_rate.material_supply&.name || "Not selected" %>
        </p>
        <p class="text-sm mt-2">
          <strong>Current Rate:</strong> <%= number_to_currency(tender_specific_material_rate.rate || 0) %>
        </p>
        <p class="text-sm mt-2">
          <strong>New Rate:</strong> <%= number_to_currency(local_assigns.dig(:new_params, :rate).to_f) %>
        </p>
        <p class="text-sm mt-2 text-gray-600">
          <strong>Affected Line Items:</strong> All line items using this material will be updated
        </p>
      </div>

      <div class="flex gap-2 justify-end">
        <%= form_with model: [tender_specific_material_rate.tender, tender_specific_material_rate],
                      method: :patch,
                      local: true,
                      class: "contents" do |f| %>
          <%# Pass through ALL new values so they aren't lost after confirmation %>
          <%= f.hidden_field :material_supply_id, value: local_assigns.dig(:new_params, :material_supply_id) || tender_specific_material_rate.material_supply_id %>
          <%= f.hidden_field :material_supply_type, value: local_assigns.dig(:new_params, :material_supply_type) || tender_specific_material_rate.material_supply_type || 'MaterialSupply' %>
          <%= f.hidden_field :supplier_id, value: local_assigns.dig(:new_params, :supplier_id) || tender_specific_material_rate.supplier_id %>
          <%= f.hidden_field :rate, value: local_assigns.dig(:new_params, :rate) || tender_specific_material_rate.rate %>
          <%= f.hidden_field :notes, value: local_assigns.dig(:new_params, :notes) || tender_specific_material_rate.notes %>
          
          <%= hidden_field_tag :confirm_cascade, "true" %>
          <%= hidden_field_tag :monthly_rate_id, local_assigns[:monthly_rate_id] %>
          
          <%= link_to "Cancel", 
                      tender_tender_specific_material_rate_path(tender_specific_material_rate.tender, tender_specific_material_rate, monthly_rate_id: local_assigns[:monthly_rate_id]), 
                      class: "btn btn-outline btn-sm" %>
          
          <%= f.submit "Confirm Update", class: "btn btn-warning btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
