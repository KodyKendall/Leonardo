<%= turbo_frame_tag dom_id(nut_bolt_washer_rate), class: "contents" do %>
  <tr class="hover:bg-gray-50 border-b" data-id="<%= nut_bolt_washer_rate.id %>">
    <% if policy(NutBoltWasherRate).reorder? %>
      <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-400 cursor-move">
        <i class="fas fa-grip-vertical drag-handle"></i>
      </td>
    <% end %>
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
      <%= nut_bolt_washer_rate.name %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 text-right">
      <%= number_with_precision(nut_bolt_washer_rate.waste_percentage, precision: 1) %>%
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 text-right">
      R<%= number_with_precision(nut_bolt_washer_rate.material_cost, precision: 2, delimiter: ',') %>
    </td>
    <td class="px-6 py-4 text-sm text-gray-700 text-left max-w-xs overflow-hidden truncate" title="<%= nut_bolt_washer_rate.calculation_breakdown %>">
      <%= nut_bolt_washer_rate.calculation_breakdown %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 text-right">
      <%= number_with_precision(nut_bolt_washer_rate.mass_per_each, precision: 3) %>
    </td>
    <% if policy(nut_bolt_washer_rate).edit? %>
      <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2 flex justify-center items-center">
        <%= link_to "Edit", edit_nut_bolt_washer_rate_path(nut_bolt_washer_rate), class: "text-blue-600 hover:text-blue-800 font-medium" %>
        <% if policy(nut_bolt_washer_rate).destroy? %>
          <%= button_to nut_bolt_washer_rate, method: :delete, class: "text-red-600 hover:text-red-800 font-medium", data: { turbo_confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
