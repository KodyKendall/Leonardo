<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
  <!-- Main Content -->
  <div class="p-6 max-w-7xl mx-auto">
    <!-- Welcome Section -->
    <div class="mb-12">
      <h1 class="text-5xl font-bold text-slate-900 mb-3">
        Tenders
      </h1>
      <p class="text-lg text-slate-600">Manage and track all your tenders in one place</p>
    </div>

    <!-- Primary CTA Section -->
    <div class="mb-12">
      <div class="card bg-gradient-to-br from-blue-600 to-blue-700 shadow-lg border-0">
        <div class="card-body items-center text-center py-12">
          <i class="fas fa-file-contract text-white text-5xl mb-4"></i>
          <h2 class="card-title text-white text-3xl mb-3">Ready to start a new tender?</h2>
          <p class="text-blue-100 mb-6 max-w-md">Create a new tender and begin managing your quote of business</p>
          <%= link_to new_tender_path, class: "btn btn-lg btn-warning gap-2 shadow-lg" do %>
            <i class="fas fa-plus"></i>Start new Tender
          <% end %>
        </div>
      </div>
    </div>

    <!-- Tender Metrics Section -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">Tender Overview</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Total Tenders Card -->
        <div class="stat bg-white shadow-md border border-slate-200 rounded-lg hover:shadow-lg transition">
          <div class="stat-figure text-blue-600">
            <i class="fas fa-file-contract text-3xl"></i>
          </div>
          <div class="stat-title text-slate-600">Total Tenders</div>
          <div class="stat-value text-blue-600"><%= @total_tenders %></div>
          <div class="stat-desc text-slate-500"><%= @draft_tenders > 0 ? "#{@draft_tenders} draft" : "All submitted" %></div>
        </div>

        <!-- Active Tenders Card -->
        <div class="stat bg-white shadow-md border border-slate-200 rounded-lg hover:shadow-lg transition">
          <div class="stat-figure text-emerald-600">
            <i class="fas fa-check-circle text-3xl"></i>
          </div>
          <div class="stat-title text-slate-600">Active Tenders</div>
          <div class="stat-value text-emerald-600"><%= @active_tenders %></div>
          <div class="stat-desc text-slate-500">Currently in progress</div>
        </div>

        <!-- Draft Tenders Card -->
        <div class="stat bg-white shadow-md border border-slate-200 rounded-lg hover:shadow-lg transition">
          <div class="stat-figure text-amber-600">
            <i class="fas fa-edit text-3xl"></i>
          </div>
          <div class="stat-title text-slate-600">Draft Tenders</div>
          <div class="stat-value text-amber-600"><%= @draft_tenders %></div>
          <div class="stat-desc text-slate-500">Awaiting submission</div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-slate-900 mb-6">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- View All Tenders -->
        <div class="card bg-white shadow-md border border-slate-200 hover:shadow-lg transition">
          <div class="card-body">
            <div class="flex items-center justify-between mb-3">
              <h3 class="card-title text-lg text-slate-900">View All Tenders</h3>
              <i class="fas fa-list text-blue-500 text-2xl"></i>
            </div>
            <p class="text-slate-600 text-sm mb-4">Browse and manage all your tenders</p>
            <%= link_to tenders_path, class: "btn btn-primary gap-2" do %>
              <i class="fas fa-arrow-right"></i>View Tenders
            <% end %>
          </div>
        </div>

        <!-- View All BOQs -->
        <div class="card bg-white shadow-md border border-slate-200 hover:shadow-lg transition">
          <div class="card-body">
            <div class="flex items-center justify-between mb-3">
              <h3 class="card-title text-lg text-slate-900">View All BOQs</h3>
              <i class="fas fa-file-csv text-indigo-600 text-2xl"></i>
            </div>
            <p class="text-slate-600 text-sm mb-4">Browse and manage Bills of Quantity documents</p>
            <%= link_to boqs_path, class: "btn btn-primary gap-2" do %>
              <i class="fas fa-arrow-right"></i>View BOQs
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>


