<% content_for :title, "Preliminaries general item templates" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Preliminaries general item templates</h1>
    <%= link_to "New preliminaries general item template", new_preliminaries_general_item_template_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="preliminaries_general_item_templates" class="min-w-full space-y-8">
    <% if @preliminaries_general_item_templates.any? %>
      <% @preliminaries_general_item_templates.group_by(&:category).each do |category, templates| %>
        <div class="space-y-4">
          <h2 class="text-2xl font-semibold border-b-2 border-gray-100 pb-2 capitalize">
            <%= category.to_s.humanize %>
          </h2>
          
          <div class="hidden md:flex justify-between items-center px-4 py-2 text-xs font-bold uppercase tracking-wider text-gray-500 bg-gray-50 rounded-t-md border border-gray-100">
            <div class="flex-1 grid grid-cols-4 gap-4">
              <div class="col-span-2">Description / Equipment</div>
              <div class="text-center">Quantity</div>
              <div class="text-right">Rate</div>
            </div>
            <div class="w-64 text-right">Actions</div>
          </div>

          <div class="divide-y divide-gray-100 border-x border-b border-gray-100 rounded-b-md overflow-hidden mb-8">
            <%= render templates %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No preliminaries general item templates found.</p>
    <% end %>
  </div>
</div>
