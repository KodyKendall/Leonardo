  <h1 class="font-bold text-4xl mb-6">Editing Template</h1>

  <%= turbo_frame_tag dom_id(@preliminaries_general_item_template) do %>
    <div class="bg-gray-50 p-6 rounded-lg border border-blue-200 mb-6">
      <%= render "form", preliminaries_general_item_template: @preliminaries_general_item_template %>
      
      <div class="mt-4 flex gap-2">
