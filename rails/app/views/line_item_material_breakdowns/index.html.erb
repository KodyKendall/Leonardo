<% content_for :title, "Material Breakdowns" %>

<div class="container mx-auto p-6">
  <% if notice.present? %>
    <div class="alert alert-success mb-6">
      <i class="fas fa-check-circle"></i>
      <span><%= notice %></span>
    </div>
  <% end %>

  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Material Breakdowns</h1>
      <p class="text-gray-500">All material breakdowns across all tenders</p>
    </div>
  </div>

  <!-- Breakdowns Table -->
  <div class="card bg-base-100 shadow">
    <div class="card-body">
      <% if @line_item_material_breakdowns.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra w-full">
            <thead>
              <tr>
                <th>ID</th>
                <th>Tender Line Item</th>
                <th>Tender</th>
                <th class="text-right">Materials Count</th>
                <th class="text-right">Subtotal</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @line_item_material_breakdowns.each do |breakdown| %>
                <tr class="hover">
                  <td>
                    <span class="font-mono text-sm"><%= breakdown.id %></span>
                  </td>
                  <td>
                    <% if breakdown.tender_line_item %>
                      <%= link_to tender_tender_line_item_path(breakdown.tender_line_item.tender, breakdown.tender_line_item), class: "link link-primary font-medium" do %>
                        <%= truncate(breakdown.tender_line_item.item_description, length: 40) %>
                      <% end %>
                      <div class="text-xs text-gray-500">Item #<%= breakdown.tender_line_item.item_number %></div>
                    <% else %>
                      <span class="text-gray-400">No line item</span>
                    <% end %>
                  </td>
                  <td>
                    <% if breakdown.tender_line_item&.tender %>
                      <%= link_to tender_path(breakdown.tender_line_item.tender), class: "link link-secondary text-sm" do %>
                        <%= truncate(breakdown.tender_line_item.tender.tender_name, length: 25) %>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">â€”</span>
                    <% end %>
                  </td>
                  <td class="text-right">
                    <span class="badge badge-outline"><%= breakdown.line_item_materials.count %></span>
                  </td>
                  <td class="text-right font-mono">R<%= number_with_precision(breakdown.subtotal || 0, precision: 2) %></td>
                  <td class="text-center">
                    <%= link_to line_item_material_breakdown_path(breakdown), class: "btn btn-xs btn-ghost", title: "View" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_line_item_material_breakdown_path(breakdown), class: "btn btn-xs btn-ghost", title: "Edit" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-10 text-gray-500">
          <i class="fas fa-inbox text-4xl mb-4"></i>
          <p>No material breakdowns found.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Debug Info -->
  <div class="card bg-base-200 shadow-sm mt-6">
    <div class="card-body">
      <h3 class="card-title text-sm text-gray-500">Debug Info</h3>
      <div class="text-sm">
        <span class="text-gray-500">Total Breakdowns:</span>
        <span class="font-mono font-bold"><%= @line_item_material_breakdowns.count %></span>
      </div>
    </div>
  </div>
</div>
