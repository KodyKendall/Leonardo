<div id="<%= dom_id tender %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">E number:</strong>
    <%= tender.e_number %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Tender name:</strong>
    <%= tender.tender_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= tender.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Client name:</strong>
    <% if tender.client %>
      <%= link_to tender_client_link_content(tender.client), client_path(tender.client), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    <% else %>
      <span class="text-gray-500">No client assigned</span>
    <% end %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Contact person:</strong>
    <% if tender.contact %>
      <span><%= tender.contact.name %></span>
      <% if tender.contact.email %>
        <span class="text-gray-600 ml-1">(<%= tender.contact.email %>)</span>
      <% end %>
    <% else %>
      <span class="text-gray-500">No contact selected</span>
    <% end %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Tender value:</strong>
    <%= number_to_currency(tender.tender_value, unit: "R ") if tender.tender_value.present? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Submission deadline:</strong>
    <% if tender.submission_deadline %>
      <%= tender.submission_deadline.strftime("%d %B %Y") %>
    <% else %>
      <span class="text-gray-500">Not set</span>
    <% end %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Financial tonnage:</strong>
    <%= number_with_precision(tender.financial_tonnage || 0, precision: 2) %> t
  </div>
  <div>
    <strong class="block font-medium mb-1">Reported tonnage:</strong>
    <%= number_with_precision(tender.total_tonnage || 0, precision: 2) %> t
  </div>
  <div>
    <strong class="block font-medium mb-1">Project type:</strong>
    <%= tender.project_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Notes:</strong>
    <%= tender.notes %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Awarded project:</strong>
    <%= tender.awarded_project_id %>
  </div>
</div>
