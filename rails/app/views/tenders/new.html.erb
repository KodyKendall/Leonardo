<% content_for :title, "New tender" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New tender</h1>

  <div class="mb-6 p-4 bg-blue-50 rounded-md border border-blue-200">
    <p class="text-gray-700 mb-3">Start with a blank Draft tender and fill in details as you go:</p>
    <%= button_to "Start new tender", quick_create_tenders_path, method: :post, class: "btn btn-primary" %>
  </div>

  <div class="divider">Or fill in the full form</div>

  <%= render "form", tender: @tender %>

  <%= link_to "Back to tenders", tenders_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
