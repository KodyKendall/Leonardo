<% content_for :title, "Showing tender" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Showing tender</h1>

  <%= render "status_progress", tender: @tender %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <%= render @tender %>
    </div>

    <div class="lg:col-span-1 space-y-4">
      <% if @tender.qob_file.attached? %>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <h2 class="font-bold text-lg mb-4 flex items-center gap-2">
            <i class="fa-regular fa-file-spreadsheet text-blue-600"></i>
            File Preview
          </h2>
          
          <% preview = preview_qob_file(@tender) %>
          <% if preview %>
            <div class="overflow-x-auto mb-4">
              <table class="w-full text-sm border-collapse">
                <thead>
                  <tr class="bg-gray-50 border-b border-gray-200">
                    <% preview[:headers].each do |header| %>
                      <th class="px-3 py-2 text-left font-semibold text-gray-700"><%= header %></th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  <% preview[:data].each do |row| %>
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                      <% row.each do |cell| %>
                        <td class="px-3 py-2 text-gray-600"><%= cell %></td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <% if preview[:data].length >= 10 %>
              <p class="text-xs text-gray-500 mb-4">Showing first 10 rows</p>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-sm">Unable to preview file</p>
          <% end %>

          <div class="pt-2 border-t border-gray-200">
            <%= link_to "Download File", rails_blob_path(@tender.qob_file, disposition: "attachment"), class: "inline-block w-full text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
          </div>
        </div>
      <% end %>

      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <h2 class="font-bold text-lg mb-4 flex items-center gap-2">
          <i class="fa-solid fa-file-csv text-green-600"></i>
          BOQs
        </h2>

        <% if @tender.boqs.any? %>
          <div class="space-y-2 mb-4">
            <% @tender.boqs.order(created_at: :desc).each do |boq| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded border border-gray-200">
                <div>
                  <p class="font-medium text-gray-800"><%= link_to boq.boq_name, boq_path(boq), class: "text-blue-600 hover:text-blue-800" %></p>
                  <p class="text-xs text-gray-500"><%= boq.status.capitalize %></p>
                </div>
                <span class="badge badge-sm" style="<%= case boq.status when 'parsed' then 'background-color: #d1fae5; color: #065f46;' when 'parsing' then 'background-color: #fef3c7; color: #92400e;' when 'error' then 'background-color: #fee2e2; color: #991b1b;' else 'background-color: #dbeafe; color: #1e40af;' end %>">
                  <%= boq.status.capitalize %>
                </span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm mb-4">No BOQs uploaded yet</p>
        <% end %>

        <div class="flex gap-2">
          <button class="btn btn-sm btn-primary flex-1" onclick="const modal = document.getElementById('boq_upload_modal'); if (modal) { if (typeof modal.showModal === 'function') { modal.showModal(); } else { modal.classList.add('modal-open'); } }">
            <i class="fa-solid fa-upload"></i> Upload BOQ
          </button>
          <button class="btn btn-sm btn-outline flex-1" onclick="const modal = document.getElementById('boq_attach_modal'); if (modal) { if (typeof modal.showModal === 'function') { modal.showModal(); } else { modal.classList.add('modal-open'); } window.loadBoqsForAttach && window.loadBoqsForAttach(); }">
            <i class="fa-solid fa-link"></i> Attach BOQ
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex gap-2">
    <%= link_to "Tender Builder", builder_tender_path(@tender), class: "rounded-md px-3.5 py-2.5 bg-indigo-600 hover:bg-indigo-500 text-white inline-block font-medium inline-flex items-center gap-2" %>
    <%= link_to "Edit this tender", edit_tender_path(@tender), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to tenders", tenders_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this tender", @tender, method: :delete, form_class: "inline-block", class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>

  <%= render "boqs/upload_form", tender: @tender %>
  <%= render "boqs/attach_form", tender: @tender %>
</div>
