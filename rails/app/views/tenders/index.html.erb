<% content_for :title, "Tenders" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="alert alert-success shadow-lg mb-6">
      <div>
        <i class="fas fa-check-circle mr-2"></i>
        <span><%= notice %></span>
      </div>
    </div>
  <% end %>

  <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
    <h1 class="font-bold text-4xl">Tenders</h1>
    <%= link_to new_tender_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus mr-2"></i>
      New Tender
    <% end %>
  </div>

  <div class="mb-6">
    <form method="get" action="<%= tenders_path %>" class="flex items-center gap-3">
      <label for="status" class="font-medium text-gray-700">Filter by Status:</label>
      <select name="status" id="status" class="select select-bordered select-sm" onchange="this.form.submit()">
        <option value="">All Statuses</option>
        <% Tender::STATUSES.each do |status| %>
          <option value="<%= status %>" <%= 'selected' if params[:status] == status %>><%= status %></option>
        <% end %>
      </select>
    </form>
  </div>

  <div id="tenders" class="overflow-x-auto bg-white rounded-lg shadow">
    <% if @tenders.any? %>
      <table class="table w-full">
        <thead>
          <tr class="bg-base-200">
            <th class="text-left font-bold">E-Number</th>
            <th class="text-left font-bold">Tender Name</th>
            <th class="text-left font-bold">Client Name</th>
            <th class="text-left font-bold">Tender Value</th>
            <th class="text-left font-bold">Project Type</th>
            <th class="text-left font-bold">Status</th>
            <th class="text-left font-bold">Created</th>
            <th class="text-center font-bold">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @tenders.order(created_at: :desc).each do |tender| %>
            <tr class="hover">
              <td class="font-bold text-primary">
                <%= link_to tender.e_number, tender_path(tender), class: "link link-hover" %>
              </td>
              <td><%= tender.tender_name %></td>
              <td class="italic text-gray-600"><%= tender.display_client_name %></td>
              <td><%= number_to_currency(tender.tender_value, unit: "R ") if tender.tender_value %></td>
              <td><%= tender.project_type %></td>
              <td>
                <% if tender.status.present? %>
                  <div class="badge <%= case tender.status when 'Awarded' then 'badge-success' when 'Not Awarded' then 'badge-error' when 'Submitted' then 'badge-info' when 'In Progress' then 'badge-warning' else 'badge-ghost' end %> badge-sm font-medium">
                    <%= tender.status %>
                  </div>
                <% end %>
              </td>
              <td class="text-sm opacity-70"><%= tender.created_at.strftime('%b %d, %Y') %></td>
              <td class="text-center">
                <div class="flex gap-2 justify-center">
                  <%= link_to tender_path(tender), class: "btn btn-ghost btn-xs text-primary", title: "View" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_tender_path(tender), class: "btn btn-ghost btn-xs text-info", title: "Edit" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= button_to tender_path(tender), method: :delete, class: "btn btn-ghost btn-xs text-error", title: "Delete", data: { turbo_confirm: "Are you sure?" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">No tenders found.</p>
        <%= link_to "Create the first tender", new_tender_path, class: "inline-block mt-4 rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      </div>
    <% end %>
  </div>
</div>
