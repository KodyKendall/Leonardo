<div class="min-h-screen bg-gray-50 py-6">
  <!-- Turbo Stream subscription for real-time grand total updates -->
  <%= turbo_stream_from "tender_#{@tender.id}_builder" %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @tender.tender_name %></h1>
          <p class="text-gray-600 mt-1">
            <span class="badge badge-lg"><%= @tender.e_number %></span>
            <span class="text-sm ml-3">Client: <%= @tender.client_name || "—" %></span>
          </p>
        </div>

        <!-- Grand Total in targetable Turbo Frame -->
        <div id="tender_<%= @tender.id %>_grand_total">
          <%= render "tenders/grand_total", tender: @tender %>
        </div>
      </div>

      <!-- BOQ Status Section -->
      <% if @tender.boqs.any? %>
        <%= link_to boq_path(@tender.boqs.first), class: "no-underline hover:opacity-90 transition-opacity" do %>
          <div class="alert alert-success mb-4 cursor-pointer">
            <div class="flex items-start justify-between">
              <div class="flex items-start gap-3">
                <i class="fa-solid fa-file-check text-lg"></i>
                <div>
                  <h3 class="font-bold">BOQ Attached</h3>
                  <p class="text-sm"><%= @tender.boqs.first.boq_name %> — <%= @tender.boqs.first.boq_items.count %> items</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex gap-2 flex-wrap">
        <%= button_to "＋ Add Line Item",
            tender_tender_line_items_path(@tender),
            method: :post,
            class: "btn btn-primary" %>

        <% if @tender.boqs.any? %>
          <%= button_to "Copy from BOQ",
              mirror_boq_items_tender_path(@tender),
              method: :post,
              class: "btn btn-info",
              data: { "turbo-method": "post" } %>
        <% end %>

        <%= link_to "Save", 
            @tender,
            method: :patch,
            class: "btn btn-outline" %>

        <%= link_to "Export", 
            @tender,
            class: "btn btn-outline" %>

        <%= link_to "Recalculate", 
            @tender,
            method: :patch,
            class: "btn btn-outline" %>

        <%= link_to "Back to Tender", 
            @tender,
            class: "btn btn-ghost" %>
      </div>
    </div>

    <!-- Line Items Section -->
    <div id="line_items_container" class="space-y-4">
      <% if @line_items.any? %>
        <%= render @line_items %>

      <% else %>
        <% if @tender.boqs.any? && @tender.boqs.first.boq_items.any? %>
          <!-- Aggressive CTA when BOQ exists but no line items -->
          <div class="alert alert-warning border-2 border-warning bg-warning/10 p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-start gap-4">
                <i class="fa-solid fa-arrow-right text-2xl text-warning"></i>
                <div>
                  <h3 class="font-bold text-lg">Next Step: Copy from BOQ</h3>
                  <p class="text-sm mt-1">This tender has no line items yet, but your BOQ has <%= @tender.boqs.first.boq_items.count %> items ready to copy.</p>
                </div>
              </div>
              <%= button_to "Copy from BOQ Now",
                  mirror_boq_items_tender_path(@tender),
                  method: :post,
                  class: "btn btn-warning btn-lg flex-shrink-0" %>
            </div>
          </div>
        <% else %>
          <!-- Default message when no BOQ or BOQ has no items -->
          <div class="alert alert-info">
            <div>
              <h3 class="font-bold">No Line Items</h3>
              <div class="text-sm">Start by adding your first line item to build out this tender.</div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Add New Line Item Button -->
    <div class="mt-6 text-center">
      <%= button_to "＋ Add New Line Item",
          tender_tender_line_items_path(@tender),
          method: :post,
          class: "btn btn-lg btn-outline" %>
    </div>
  </div>
</div>
