<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @tender.tender_name %></h1>
          <p class="text-gray-600 mt-1">
            <span class="badge badge-lg"><%= @tender.e_number %></span>
            <span class="text-sm ml-3">Client: <%= @tender.client_name || "—" %></span>
          </p>
        </div>

        <div class="text-right">
          <div class="text-sm text-gray-600 mb-1">GRAND TOTAL</div>
          <div class="text-3xl font-bold text-gray-900" id="grand-total">
            R<%= number_with_precision(@line_items.sum(&:total_amount), precision: 2) %>
          </div>
        </div>
      </div>

      <!-- BOQ Status Section -->
      <% if @tender.boqs.any? %>
        <div class="alert alert-success mb-4">
          <div class="flex items-start justify-between">
            <div class="flex items-start gap-3">
              <i class="fa-solid fa-file-check text-lg"></i>
              <div>
                <h3 class="font-bold">BOQ Attached</h3>
                <p class="text-sm"><%= @tender.boqs.first.boq_name %> — <%= @tender.boqs.first.boq_items.count %> items</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="flex gap-2 flex-wrap">
        <%= button_to "＋ Add Line Item",
            tender_tender_line_items_path(@tender),
            method: :post,
            class: "btn btn-primary" %>

        <% if @tender.boqs.any? %>
          <%= button_to "Copy from BOQ",
              mirror_boq_items_tender_path(@tender),
              method: :post,
              class: "btn btn-info",
              data: { "turbo-method": "post" } %>
        <% end %>

        <%= link_to "Save", 
            @tender,
            method: :patch,
            class: "btn btn-outline" %>

        <%= link_to "Export", 
            @tender,
            class: "btn btn-outline" %>

        <%= link_to "Recalculate", 
            @tender,
            method: :patch,
            class: "btn btn-outline" %>

        <%= link_to "Back to Tender", 
            @tender,
            class: "btn btn-ghost" %>
      </div>
    </div>

    <!-- Line Items Section -->
    <div id="line_items_container" class="space-y-4">
      <% if @line_items.any? %>
        <%= render @line_items %>

      <% else %>
        <div class="alert alert-info">
          <div>
            <h3 class="font-bold">No Line Items</h3>
            <div class="text-sm">Start by adding your first line item to build out this tender.</div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Add New Line Item Button -->
    <div class="mt-6 text-center">
      <%= button_to "＋ Add New Line Item",
          tender_tender_line_items_path(@tender),
          method: :post,
          class: "btn btn-lg btn-outline" %>
    </div>
  </div>
</div>

<!-- Stimulus Controller for Grand Total Calculation -->
<script>
  document.addEventListener('turbo:load', function() {
    updateGrandTotal();
  });

  document.addEventListener('turbo:submit-end', function() {
    setTimeout(updateGrandTotal, 100);
  });

  function updateGrandTotal() {
    const lineItemFrames = document.querySelectorAll('[id^="tender_line_item_"]');
    let total = 0;

    lineItemFrames.forEach(frame => {
      const totalCell = frame.querySelector('[class*="text-gray-900"][class*="text-lg"]');
      if (totalCell) {
        const currencyText = totalCell.textContent.trim();
        const numericValue = parseFloat(currencyText.replace(/[^\d.-]/g, ''));
        if (!isNaN(numericValue)) {
          total += numericValue;
        }
      }
    });

    const grandTotalEl = document.getElementById('grand-total');
    if (grandTotalEl) {
      grandTotalEl.textContent = new Intl.NumberFormat('en-ZA', {
        style: 'currency',
        currency: 'ZAR'
      }).format(total);
    }
  }
</script>
