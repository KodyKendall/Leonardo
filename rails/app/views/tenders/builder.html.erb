<% content_for :head do %>
  <style>
    /* Ensure turbo-frames behave like block elements for SortableJS */
    #line_items_container turbo-frame {
      display: block;
      width: 100%;
    }

    /* Prevent text selection while dragging to avoid "grabbing multiple" look */
    .sortable-chosen {
      user-select: none;
    }

    /* Improve visual of the item being moved */
    .bg-blue-50 {
      background-color: #eff6ff !important;
      border: 2px dashed #3b82f6 !important;
    }
  </style>
<% end %>

<div class="min-h-screen bg-gray-50 py-6">
  <!-- Turbo Stream subscription for real-time grand total updates -->
  <%= turbo_stream_from "tender_#{@tender.id}_builder" %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-bold"><%= link_to @tender.tender_name, tender_path(@tender), class: "text-blue-600 hover:text-blue-800 underline" %></h1>
          <div class="flex items-center gap-2 mt-2">
            <span class="badge badge-lg"><%= @tender.e_number %></span>
            <span class="text-sm text-gray-600 ml-1">Client: <%= @tender.client_name || "—" %></span>
            
            <div class="flex gap-4 ml-4">
              <%= link_to edit_tender_project_rate_build_up_path(@tender, @tender.project_rate_buildup), class: "text-blue-600 hover:text-blue-800 underline text-sm font-medium" do %>
                <i class="fa-solid fa-calculator mr-1"></i> Project Rates
              <% end if @tender.project_rate_buildup %>

              <%= link_to tender_inclusions_exclusions_tender_path(@tender), class: "text-blue-600 hover:text-blue-800 underline text-sm font-medium" do %>
                <i class="fa-solid fa-list-check mr-1"></i> Inclusions/Exclusions
              <% end %>
            </div>
          </div>
        </div>

        <!-- Grand Total and Total Tonnes in targetable Turbo Frames -->
        <div class="flex gap-8 justify-end">
          <div id="tender_<%= @tender.id %>_total_tonnes">
            <%= render "tenders/total_tonnes", tender: @tender %>
          </div>
          <div id="tender_<%= @tender.id %>_rate_per_tonne">
            <%= render "tenders/rate_per_tonne", tender: @tender %>
          </div>
          <div id="tender_<%= @tender.id %>_grand_total">
            <%= render "tenders/grand_total", tender: @tender %>
          </div>
        </div>
      </div>

      <!-- BOQ Status Section -->
      <% if @tender.boqs.any? %>
        <div class="mb-6 bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
          <div class="flex items-start gap-3">
            <i class="fa-solid fa-file-check text-blue-600 text-lg flex-shrink-0 mt-0.5"></i>
            <div>
              <h3 class="font-semibold text-blue-900 mb-1">BOQ Attached</h3>
              <p class="text-sm text-blue-800">
                <%= link_to @tender.boqs.first.boq_name, boq_path(@tender.boqs.first), class: "text-blue-600 hover:text-blue-800 hover:underline font-medium" %>
                <span class="text-blue-700">· <%= @tender.boqs.first.boq_items.count %> items</span>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- P&Gs Summary Section -->
      <%= render "tenders/p_and_g_summary", tender: @tender %>

      <!-- Shop Drawings Section -->
      <%= render "tenders/shop_drawings", tender: @tender %>

    </div>

    <!-- Line Items Section -->
    <div class="bg-white rounded-lg shadow-sm border overflow-hidden">
      <!-- Sticky Header -->
      <div class="sticky top-0 z-20 bg-gray-100 border-b py-2 px-4 font-bold text-xs uppercase text-gray-600 grid grid-cols-12 gap-2 items-center">
        <div class="col-span-1 text-center"></div>
        <div class="col-span-1 text-center">Page</div>
        <div class="col-span-1 text-center">Item</div>
        <div class="col-span-2 text-center">Description</div>
        <div class="col-span-1 text-center">Unit</div>
        <div class="col-span-1 text-center">Qty</div>
        <div class="col-span-1 text-center">Rate</div>
        <div class="col-span-2 text-center">Total</div>
        <div class="col-span-2 text-center">Actions</div>
      </div>

      <div id="line_items_container" 
           class="divide-y divide-gray-100" 
           data-controller="sortable" 
           data-sortable-url-value="<%= reorder_tender_tender_line_items_path(@tender) %>">
        <% if @line_items.any? %>
          <%= render @line_items %>
        <% else %>
          <div class="p-8 text-center">
            <% if @tender.boqs.any? && @tender.boqs.first.boq_items.any? && !@tender.boq_mirrored? %>
              <!-- Aggressive CTA when BOQ exists but no line items -->
              <div class="alert alert-warning border-2 border-warning bg-warning/10 p-6 mx-auto max-w-2xl">
                <div class="flex items-center justify-between">
                  <div class="flex items-start gap-4">
                    <i class="fa-solid fa-arrow-right text-2xl text-warning"></i>
                    <div class="text-left">
                      <h3 class="font-bold text-lg">Next Step: Copy from BOQ</h3>
                      <p class="text-sm mt-1">This tender has no line items yet, but your BOQ has <%= @tender.boqs.first.boq_items.count %> items ready to copy.</p>
                    </div>
                  </div>
                  <%= form_with url: mirror_boq_items_tender_path(@tender), 
                                method: :post, 
                                class: "flex-shrink-0",
                                data: { 
                                  controller: "boq-mirror", 
                                  action: "submit->boq-mirror#submit" 
                                } do |f| %>
                    <%= f.button type: "submit", 
                                 class: "btn btn-warning btn-md", 
                                 data: { boq_mirror_target: "button" } do %>
                      Copy from BOQ Now
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% else %>
              <!-- Default message when no BOQ or BOQ has no items -->
              <div class="alert alert-info max-w-md mx-auto">
                <div>
                  <h3 class="font-bold">No Line Items</h3>
                  <div class="text-sm">Start by adding your first line item to build out this tender.</div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Add New Line Item / Heading Buttons -->
    <div class="mt-6 flex justify-center gap-4">
      <%= button_to "＋ Add New Line Item",
          tender_tender_line_items_path(@tender),
          method: :post,
          class: "btn btn-lg btn-outline",
          data: { turbo_stream: true } %>
      
      <%= button_to "＋ Add New Heading",
          tender_tender_line_items_path(@tender),
          method: :post,
          params: { tender_line_item: { is_heading: true, item_description: "New Heading" } },
          class: "btn btn-lg btn-outline btn-secondary",
          data: { turbo_stream: true } %>
    </div>
  </div>
</div>


