<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @tender.tender_name %></h1>
          <p class="text-gray-600 mt-1">
            <span class="badge badge-lg"><%= @tender.e_number %></span>
            <span class="text-sm ml-3">Client: <%= @tender.client_name || "—" %></span>
          </p>
        </div>

        <div class="text-right">
          <div class="text-sm text-gray-600 mb-1">GRAND TOTAL</div>
          <div class="text-3xl font-bold text-gray-900" id="grand-total">
            R<%= number_with_precision(@line_items.sum(&:total_amount), precision: 2) %>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-2 flex-wrap">
        <%= link_to "＋ Add Line Item", 
            new_tender_tender_line_item_path(@tender),
            class: "btn btn-primary",
            data: { turbo_frame: "modal" } %>

        <%= link_to "Save", 
            @tender,
            method: :patch,
            class: "btn btn-outline" %>

        <%= link_to "Export", 
            @tender,
            class: "btn btn-outline" %>

        <%= link_to "Recalculate", 
            @tender,
            method: :patch,
            class: "btn btn-outline" %>

        <%= link_to "Back to Tender", 
            @tender,
            class: "btn btn-ghost" %>
      </div>
    </div>

    <!-- Line Items Section -->
    <div id="line_items_container" class="space-y-4">
      <% if @line_items.any? %>
        <% @line_items.each do |line_item| %>
          <%= render 'tender_line_items/show', tender_line_item: line_item %>
        <% end %>
      <% else %>
        <div class="alert alert-info">
          <div>
            <h3 class="font-bold">No Line Items</h3>
            <div class="text-sm">Start by adding your first line item to build out this tender.</div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Add New Line Item Button -->
    <div class="mt-6 text-center">
      <%= link_to "＋ Add New Line Item", 
          new_tender_tender_line_item_path(@tender),
          class: "btn btn-lg btn-outline",
          data: { turbo_frame: "modal" } %>
    </div>
  </div>
</div>

<!-- Modal Dialog using DaisyUI -->
<dialog id="modal" class="modal">
  <div class="modal-box w-11/12 max-w-2xl">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <%= turbo_frame_tag "modal" %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<script>
  document.addEventListener('turbo:load', () => {
    const modal = document.getElementById('modal');
    const modalFrame = document.getElementById('modal');
    
    // Show modal when content is loaded
    const observer = new MutationObserver(() => {
      if (modalFrame && modalFrame.innerHTML.trim()) {
        modal.showModal();
      }
    });
    
    observer.observe(modalFrame, { childList: true, subtree: true });
  });

  // Close modal when frame is emptied (after successful submit)
  document.addEventListener('turbo:submit-end', () => {
    const modal = document.getElementById('modal');
    const modalFrame = document.getElementById('modal');
    if (modalFrame && !modalFrame.innerHTML.trim()) {
      modal.close();
    }
  });
</script>

<!-- Stimulus Controller for Grand Total Calculation -->
<script>
  document.addEventListener('turbo:load', function() {
    updateGrandTotal();
  });

  document.addEventListener('turbo:submit-end', function() {
    setTimeout(updateGrandTotal, 100);
  });

  function updateGrandTotal() {
    const lineItemFrames = document.querySelectorAll('[id^="tender_line_item_"]');
    let total = 0;

    lineItemFrames.forEach(frame => {
      const totalCell = frame.querySelector('[class*="text-gray-900"][class*="text-lg"]');
      if (totalCell) {
        const currencyText = totalCell.textContent.trim();
        const numericValue = parseFloat(currencyText.replace(/[^\d.-]/g, ''));
        if (!isNaN(numericValue)) {
          total += numericValue;
        }
      }
    });

    const grandTotalEl = document.getElementById('grand-total');
    if (grandTotalEl) {
      grandTotalEl.textContent = new Intl.NumberFormat('en-ZA', {
        style: 'currency',
        currency: 'ZAR'
      }).format(total);
    }
  }
</script>
