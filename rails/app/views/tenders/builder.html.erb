<div class="min-h-screen bg-gray-50 py-6">
  <!-- Turbo Stream subscription for real-time grand total updates -->
  <%= turbo_stream_from "tender_#{@tender.id}_builder" %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-3xl font-bold"><%= link_to @tender.tender_name, tender_path(@tender), class: "text-blue-600 hover:text-blue-800 underline" %></h1>
          <p class="text-gray-600 mt-1">
            <span class="badge badge-lg"><%= @tender.e_number %></span>
            <span class="text-sm ml-3">Client: <%= @tender.client_name || "—" %></span>
          </p>
        </div>

        <!-- Grand Total and Total Tonnes in targetable Turbo Frames -->
        <div class="flex gap-8 justify-end">
          <div id="tender_<%= @tender.id %>_total_tonnes">
            <%= render "tenders/total_tonnes", tender: @tender %>
          </div>
          <div id="tender_<%= @tender.id %>_grand_total">
            <%= render "tenders/grand_total", tender: @tender %>
          </div>
        </div>
      </div>

      <!-- BOQ Status Section -->
      <% if @tender.boqs.any? %>
        <div class="mb-6 bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
          <div class="flex items-start gap-3">
            <i class="fa-solid fa-file-check text-blue-600 text-lg flex-shrink-0 mt-0.5"></i>
            <div>
              <h3 class="font-semibold text-blue-900 mb-1">BOQ Attached</h3>
              <p class="text-sm text-blue-800">
                <%= link_to @tender.boqs.first.boq_name, boq_path(@tender.boqs.first), class: "text-blue-600 hover:text-blue-800 hover:underline font-medium" %>
                <span class="text-blue-700">· <%= @tender.boqs.first.boq_items.count %> items</span>
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Shop Drawings Section -->
      <%= render "tenders/shop_drawings", tender: @tender %>

    </div>

    <!-- Line Items Section -->
    <div id="line_items_container" class="space-y-4">
      <% if @line_items.any? %>
        <%= render @line_items %>

      <% else %>
        <% if @tender.boqs.any? && @tender.boqs.first.boq_items.any? %>
          <!-- Aggressive CTA when BOQ exists but no line items -->
          <div class="alert alert-warning border-2 border-warning bg-warning/10 p-6">
            <div class="flex items-center justify-between">
              <div class="flex items-start gap-4">
                <i class="fa-solid fa-arrow-right text-2xl text-warning"></i>
                <div>
                  <h3 class="font-bold text-lg">Next Step: Copy from BOQ</h3>
                  <p class="text-sm mt-1">This tender has no line items yet, but your BOQ has <%= @tender.boqs.first.boq_items.count %> items ready to copy.</p>
                </div>
              </div>
              <%= button_to "Copy from BOQ Now",
                  mirror_boq_items_tender_path(@tender),
                  method: :post,
                  class: "btn btn-warning btn-lg flex-shrink-0",
                  data: { turbo: false } %>
            </div>
          </div>
        <% else %>
          <!-- Default message when no BOQ or BOQ has no items -->
          <div class="alert alert-info">
            <div>
              <h3 class="font-bold">No Line Items</h3>
              <div class="text-sm">Start by adding your first line item to build out this tender.</div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Add New Line Item Button -->
    <div class="mt-6 text-center">
      <%= button_to "＋ Add New Line Item",
          tender_tender_line_items_path(@tender),
          method: :post,
          class: "btn btn-lg btn-outline" %>
    </div>
  </div>
</div>

<script>
  // Refresh page after Copy from BOQ completes
  document.addEventListener('submit', function(e) {
    const form = e.target;
    
    // Check if this is the "Copy from BOQ Now" form
    if (form.action.includes('mirror_boq_items')) {
      e.preventDefault();
      
      const formData = new FormData(form);
      const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
      
      fetch(form.action, {
        method: 'POST',
        headers: {
          'X-CSRF-Token': csrfToken
        },
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          // Refresh the page after a brief delay to ensure DB is updated
          setTimeout(() => {
            window.location.reload();
          }, 500);
        } else {
          console.error('Error:', data.error);
          alert('Error: ' + (data.error || 'Failed to copy BOQ items'));
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error copying BOQ items');
      });
    }
  });
</script>
