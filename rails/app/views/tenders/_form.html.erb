<%= form_with(model: tender, class: "space-y-6") do |form| %>
  <% if tender.errors.any? %>
    <div role="alert" class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l-2-2m0 0l-2-2m2 2l2-2m-2 2l-2 2m2-2l2 2m0 0l2 2m-2-2l-2 2"></path>
      </svg>
      <div>
        <h2><%= pluralize(tender.errors.count, "error") %> prohibited this tender from being saved:</h2>
        <ul class="list-disc ml-6 mt-2">
          <% tender.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- E-Number (Read-only, auto-generated) -->
  <div class="form-control">
    <%= form.label :e_number, "E-Number", class: "label" %>
    <div class="input-group">
      <%= form.text_field :e_number, readonly: true, placeholder: "Auto-generated", class: "input input-bordered w-full bg-gray-100", disabled: true %>
      <span class="label-text-alt text-gray-500 mt-1">Will be auto-generated on save</span>
    </div>
  </div>

  <!-- Tender Name -->
  <div class="form-control">
    <%= form.label :tender_name, "Tender Name *", class: "label" %>
    <%= form.text_field :tender_name, placeholder: "Enter tender name", class: "input input-bordered w-full #{tender.errors[:tender_name].any? ? 'input-error' : ''}" %>
    <% if tender.errors[:tender_name].any? %>
      <div class="label">
        <span class="label-text-alt text-error"><%= tender.errors[:tender_name].first %></span>
      </div>
    <% end %>
  </div>

  <!-- Client Selection -->
  <div class="form-control">
    <%= form.label :client_id, "Client *", class: "label" %>
    <select name="tender[client_id]" class="select select-bordered w-full #{tender.errors[:client_id].any? ? 'select-error' : ''}">
      <option value="">-- Select a Client --</option>
      <% @clients.each do |client| %>
        <option value="<%= client.id %>" <%= 'selected' if tender.client_id == client.id %>>
          <%= client.business_name %>
        </option>
      <% end %>
    </select>
    <% if tender.errors[:client_id].any? %>
      <div class="label">
        <span class="label-text-alt text-error"><%= tender.errors[:client_id].first %></span>
      </div>
    <% end %>
  </div>

  <!-- Submission Deadline -->
  <div class="form-control">
    <%= form.label :submission_deadline, "Submission Deadline", class: "label" %>
    <%= form.date_field :submission_deadline, class: "input input-bordered w-full #{tender.errors[:submission_deadline].any? ? 'input-error' : ''}" %>
    <% if tender.errors[:submission_deadline].any? %>
      <div class="label">
        <span class="label-text-alt text-error"><%= tender.errors[:submission_deadline].first %></span>
      </div>
    <% end %>
  </div>

  <!-- Status Dropdown -->
  <div class="form-control">
    <%= form.label :status, "Status *", class: "label" %>
    <select name="tender[status]" class="select select-bordered w-full #{tender.errors[:status].any? ? 'select-error' : ''}">
      <option value="">-- Select Status --</option>
      <% Tender::STATUSES.each do |status| %>
        <option value="<%= status %>" <%= 'selected' if tender.status == status %>>
          <%= status %>
        </option>
      <% end %>
    </select>
    <% if tender.errors[:status].any? %>
      <div class="label">
        <span class="label-text-alt text-error"><%= tender.errors[:status].first %></span>
      </div>
    <% end %>
  </div>

  <!-- Tender Value -->
  <div class="form-control">
    <%= form.label :tender_value, "Tender Value", class: "label" %>
    <%= form.number_field :tender_value, placeholder: "0.00", step: 0.01, class: "input input-bordered w-full #{tender.errors[:tender_value].any? ? 'input-error' : ''}" %>
    <% if tender.errors[:tender_value].any? %>
      <div class="label">
        <span class="label-text-alt text-error"><%= tender.errors[:tender_value].first %></span>
      </div>
    <% end %>
  </div>

  <!-- Notes -->
  <div class="form-control">
    <%= form.label :notes, "Notes", class: "label" %>
    <%= form.text_area :notes, rows: 4, placeholder: "Add any additional notes here...", class: "textarea textarea-bordered w-full #{tender.errors[:notes].any? ? 'textarea-error' : ''}" %>
    <% if tender.errors[:notes].any? %>
      <div class="label">
        <span class="label-text-alt text-error"><%= tender.errors[:notes].first %></span>
      </div>
    <% end %>
  </div>

  <!-- Submit Buttons -->
  <div class="flex gap-4 pt-4">
    <%= form.submit "Save Tender", class: "btn btn-primary flex-1" %>
    <%= link_to "Cancel", tenders_path, class: "btn btn-ghost flex-1" %>
  </div>
<% end %>
