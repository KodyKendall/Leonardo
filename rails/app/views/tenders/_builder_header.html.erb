<header class="card bg-base-100 shadow">
  <div class="card-body">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold"><%= @tender.tender_name %></h1>
        <p class="text-gray-600 mt-2">
          <span class="inline-flex items-center gap-2">
            <i class="fa-solid fa-file-contract text-blue-600"></i>
            <%= @tender.e_number %>
            <span class="badge badge-sm"><%= @tender.status %></span>
          </span>
        </p>
      </div>
      
      <div class="text-right">
        <div class="mb-2">
          <span class="text-sm text-gray-600">Tender Total</span>
          <div class="text-2xl font-bold text-green-600">
            R <%= number_with_delimiter(@tender.tender_line_items.sum { |li| li.total_amount }, precision: 2) %>
          </div>
        </div>
      </div>

      <div>
        <%= link_to "â† Back to Tender", tender_path(@tender), class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</header>
