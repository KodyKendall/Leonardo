<% content_for :title, "Tender crane selections" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tender crane selections</h1>
    <%= link_to "New tender crane selection", new_tender_crane_selection_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="tender_crane_selections" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @tender_crane_selections.any? %>
      <% @tender_crane_selections.each do |tender_crane_selection| %>
        <div class="w-full">
          <%= render tender_crane_selection %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No tender crane selections found.</p>
    <% end %>
  </div>
</div>
